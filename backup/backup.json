{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
        "UpdateParameter": {
            "Description": "(optional) This parameter is a fake param please use/change it just if you want to force the update to the new SC version",
            "Type": "String",
            "Default": ""
        },
        "BackupPlanName": {
            "Description": "Enter the name of the backup plan (Required)",
            "Type": "String",
            "Default": "test-01"
        },
        "CronExpression": {
            "Description": "Enter the cron expression for your backup plan (Required)",
            "Type": "String",
            "Default": "cron(0 0 ? * * *)"
        },
        "Retention": {
            "Description": "This value will identify how many days your backup will be expired after (Required)",
            "Type": "String",
            "Default": 31
        }
    },
    "Resources": {
        "BackupRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName": "SampleBackupRole",
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "backup.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/service-role/AWSBackupServiceRolePolicyForBackup    \n  "
                ]
            },
            "Tags": [
                {
                    "created_timestamp": 1646300565,
                    "last_modified_timestamp": 1646300565,
                    "resource_name": "BackupRole",
                    "resource_type": "AWS::IAM::Role",
                    "file_path": "/tmp/tmppo4czohi/backup/backup.json",
                    "prancer_unique_id": "e03eb09d-5da8-4f27-8808-aacbea224485"
                }
            ]
        },
        "BackupVault": {
            "Type": "AWS::Backup::BackupVault",
            "Properties": {
                "BackupVaultName": {
                    "Fn::Sub": "${BackupPlanName}-BackupVaultName"
                },
                "AccessPolicy": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Sid": "Vault-Access-Policy",
                            "Effect": "Allow",
                            "Principal": "*",
                            "Action": "backup:DeleteRecoveryPoint",
                            "Resource": [
                                "*"
                            ]
                        }
                    ]
                }
            },
            "Tags": [
                {
                    "created_timestamp": 1646300565,
                    "last_modified_timestamp": 1646300565,
                    "resource_name": "BackupVault",
                    "resource_type": "AWS::Backup::BackupVault",
                    "file_path": "/tmp/tmppo4czohi/backup/backup.json",
                    "prancer_unique_id": "6ab31e59-c2d2-4a7b-94a9-4168d546d213"
                }
            ]
        },
        "BackupPlan": {
            "Type": "AWS::Backup::BackupPlan",
            "Properties": {
                "BackupPlan": {
                    "BackupPlanName": {
                        "Ref": "BackupPlanName"
                    },
                    "BackupPlanRule": [
                        {
                            "RuleName": {
                                "Fn::Sub": "${BackupPlanName}-BackupRuleName"
                            },
                            "TargetBackupVault": {
                                "Ref": "BackupVault"
                            },
                            "ScheduleExpression": "cron(0 0 ? * * *)",
                            "Lifecycle": {
                                "DeleteAfterDays": 31
                            }
                        }
                    ]
                }
            },
            "DependsOn": "BackupVault",
            "Tags": [
                {
                    "created_timestamp": 1646300565,
                    "last_modified_timestamp": 1646300565,
                    "resource_name": "BackupPlan",
                    "resource_type": "AWS::Backup::BackupPlan",
                    "file_path": "/tmp/tmppo4czohi/backup/backup.json",
                    "prancer_unique_id": "5f6c7a75-0dfa-4c25-ae40-60777d57d62d"
                }
            ]
        },
        "TagBasedBackupSelection": {
            "Type": "AWS::Backup::BackupSelection",
            "Properties": {
                "BackupSelection": {
                    "SelectionName": "TagBasedBackupSelection-01",
                    "IamRoleArn": {
                        "Fn::GetAtt": [
                            "BackupRole",
                            "Arn"
                        ]
                    },
                    "ListOfTags": [
                        {
                            "ConditionType": "STRINGEQUALS",
                            "ConditionKey": "backup-plan",
                            "ConditionValue": {
                                "Fn::Sub": "${BackupPlanName}-${Retention}days-daily"
                            }
                        }
                    ]
                },
                "BackupPlanId": {
                    "Ref": "BackupPlan"
                }
            },
            "DependsOn": "BackupPlan",
            "Tags": [
                {
                    "created_timestamp": 1646300565,
                    "last_modified_timestamp": 1646300565,
                    "resource_name": "TagBasedBackupSelection",
                    "resource_type": "AWS::Backup::BackupSelection",
                    "file_path": "/tmp/tmppo4czohi/backup/backup.json",
                    "prancer_unique_id": "3e755424-3c70-4b74-bdbf-1c4d4b035fd8"
                }
            ]
        }
    }
}